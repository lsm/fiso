FROM golang:1.25-alpine AS builder

WORKDIR /app

COPY go.mod go.sum ./
RUN go mod download

COPY . .
RUN CGO_ENABLED=0 GOOS=linux go build -o /bin/fiso-link ./cmd/fiso-link

FROM alpine:3.20

RUN apk add --no-cache ca-certificates tzdata

COPY --from=builder /bin/fiso-link /usr/local/bin/fiso-link

RUN adduser -D -u 1000 fiso
USER fiso

EXPOSE 3500 9090

ENTRYPOINT ["fiso-link"]

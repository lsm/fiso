FROM golang:1.25-alpine AS builder

WORKDIR /app

COPY go.mod go.sum ./
RUN go mod download

COPY . .
RUN CGO_ENABLED=0 GOOS=linux go build -o /bin/fiso-operator ./cmd/fiso-operator

FROM alpine:3.20

RUN apk add --no-cache ca-certificates tzdata

COPY --from=builder /bin/fiso-operator /usr/local/bin/fiso-operator

RUN adduser -D -u 1000 fiso
USER fiso

EXPOSE 8443 9090

ENTRYPOINT ["fiso-operator"]
